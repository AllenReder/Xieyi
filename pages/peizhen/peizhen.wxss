/* CSS */
.background {
  background-color: #7db9e4;
  width: auto;
  padding:20rpx;
}

.block {
  width: auto;
  height: 200rpx;
  background-color: rgb(245, 252, 255);
  border-radius: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
}

.title {
  font-size: 16px;
  font-weight: bold;
  color: #333333;
  margin: 20rpx;
}

.content {
  font-size: 14px;
  color: #666666;
  margin: 20rpx;
}


.icon {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10px;
  border-radius: 50%;
}